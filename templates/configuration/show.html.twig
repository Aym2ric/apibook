{% extends 'base_admin.html.twig' %}

{% block title %}Configuration{% endblock %}

{% block body %}
    <h1>Configuration</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ configuration.id }}</td>
            </tr>
            <tr>
                <th>Sitename</th>
                <td>{{ configuration.sitename }}</td>
            </tr>
            <tr>
                <th>Metadescription</th>
                <td>{{ configuration.metadescription }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ configuration.image }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ configuration.updatedAt ? configuration.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('configuration_index') }}">back to list</a>

    <a href="{{ path('configuration_edit', {'id': configuration.id}) }}">edit</a>

    {{ include('configuration/_delete_form.html.twig') }}
{% endblock %}
