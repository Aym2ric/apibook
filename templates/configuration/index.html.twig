{% extends 'base_admin.html.twig' %}

{% block title %}Configuration index{% endblock %}

{% block body %}
    <h1>Configuration index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Sitename</th>
                <th>Metadescription</th>
                <th>Image</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for configuration in configurations %}
            <tr>
                <td>{{ configuration.id }}</td>
                <td>{{ configuration.sitename }}</td>
                <td>{{ configuration.metadescription }}</td>
                <td>{{ configuration.image }}</td>
                <td>{{ configuration.updatedAt ? configuration.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('configuration_show', {'id': configuration.id}) }}">show</a>
                    <a href="{{ path('configuration_edit', {'id': configuration.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('configuration_new') }}">Create new</a>
{% endblock %}
