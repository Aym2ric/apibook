{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header ">
                    Utilisateurs <a href="{{ path('user_new') }}"><i class="fa fa-plus-square"></i></a>
                </div>
                <div class="card-body ">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Username</th>
                            <th>Roles</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.username }}</td>
                                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                <td>
                                    <a href="{{ path('user_show', {'id': user.id}) }}"><i class="fa fa-eye"></i></a>
                                    <a href="{{ path('user_edit', {'id': user.id}) }}"><i class="fa fa-edit"></i></a>
                                    <a href="{{ path('user_delete_force', {'id': user.id}) }}"><i class="fa fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

