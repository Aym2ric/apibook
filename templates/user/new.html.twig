{% extends 'base_admin.html.twig' %}

{% block title %}Créer Utilisateur{% endblock %}

{% block body %}

        <!-- BREADCRUMBS -->
        <div class="row pb-4">
            <div class="col-auto">
                <i class="fa fa-user circular circular-success"></i>
            </div>
            <div class="col pt-3">
                <h1 class="h1 bdc-title">Créer Utilisateur</h1>
                <span class="text-grey">Gestion des utilisateurs</span>
            </div>
            <div class="col text-right">
                <a href="{{ path('user_index') }}" class="btn btn-success-light text-white btn-md"><i class="fa fa-table"></i> <span
                            class="px-2">Liste</span></a>
            </div>
        </div>
        <!-- BREADCRUMBS -->

    <!-- FORMULAIRE ADD OBJETS -->
        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="box p-4">
                    <div class="box p-4">
                        <div class="box-header p-0 pb-2 mb-3"><h3>Informations générales</h3></div>
                        {{ form_errors(form) }}

                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="row">
                            <div class="col-md-6 pr-1">
                                <div class="form-group">
                                    <label class="text-grey required">Username</label>
                                    {{ form_widget(form.username) }}
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    <label class="text-grey required">Mot de passe</label>
                                    {{ form_widget(form.password) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="box p-4">
                        <div class="row">
                            <div class="col-md-12 pr-1">
                                <div class="form-group">
                                    <label class="text-grey required">Rôles</label>
                                    {{ form_widget(form.roles) }}
                                </div>
                            </div>
                        </div>

                        <button class="btn btn-primary">Sauvegarder</button>
                        {{ form_end(form) }}

                    </div>

                </div>
            </div>
        </div>
    <!-- FORMULAIRE ADD OBJETS -->
{% endblock %}
